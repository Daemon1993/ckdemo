<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/qb_px_120"
    android:layout_height="@dimen/qb_px_120"
    android:background="@drawable/base_dialog_bg">

    <ProgressBar
        android:id="@+id/pb_load"
        android:layout_width="@dimen/qb_px_55"
        android:layout_height="@dimen/qb_px_55"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/white"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pb_load"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/qb_px_5"
        android:text="加载中..."
        android:textColor="@color/white"
        android:textSize="12sp" />


</RelativeLayout>
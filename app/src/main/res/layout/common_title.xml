<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_title"
    android:background="@color/title_bg">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/common_title_icon"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:onClick="refreshOrSearch"
        android:padding="@dimen/common_title_pad"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:maxEms="20"
        android:singleLine="true"
        android:textColor="@color/title_txt"
        android:textSize="@dimen/text_size_20"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:gravity="center"
        android:onClick="finish"
        android:paddingRight="@dimen/qb_px_10">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/qb_px_18"
            android:layout_height="@dimen/qb_px_18"
            android:layout_marginLeft="@dimen/base_top_left_margin"
            android:src="@drawable/iv_back" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_add"
        android:layout_width="@dimen/common_title_icon"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/iv_icon"
        android:clickable="true"
        android:onClick="addRepairPost"
        android:padding="@dimen/common_title_pad"
        android:src="@drawable/add_repair"
        android:visibility="gone" />

    <TextView
        android:id="@+id/das_right_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color_4A90E2"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_1"
        android:layout_alignParentBottom="true"
        android:background="@color/activity_main_line_bg" />
</RelativeLayout>